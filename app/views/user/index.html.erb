    <% if test.passed_by_user? @user %>
      <%= content_tag :span, t('.test_passed'), class: :completed %>
    <% else %>
      <%= link_to t('.pass_test'), pass_test_user_index_path(id: test.id) %>
    <% end %>
  <% end %>
<% end %>