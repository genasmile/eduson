<%= content_tag :h2, t('.my_courses') %>

<% @courses.each do |course| %>
  <%= content_tag :p do %>
    <%= course.title %>
    <% if course.passed_by_user? @user %>
      <%= content_tag :span, t('.course_passed'), class: :completed %>
    <% else %>
      <%= link_to t('.pass_course'), pass_course_user_index_path(id: course.id) %>
    <% end %>
  <% end %>
<% end %>

